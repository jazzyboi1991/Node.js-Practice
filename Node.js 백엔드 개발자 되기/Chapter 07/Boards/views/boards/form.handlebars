<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h2>{{#if isEdit}}게시글 수정{{else}}게시글 작성{{/if}}</h2>
            </div>
            <div class="card-body">
                <form id="boardForm" {{#if isEdit}}action="/api/boards/{{board._id}}" data-method="PUT"{{else}}action="/api/boards" data-method="POST"{{/if}} enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">제목 <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="title" name="title" value="{{#if board}}{{board.title}}{{/if}}" required maxlength="100">
                    </div>
                    
                    <div class="mb-3">
                        <label for="author" class="form-label">작성자 <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="author" name="author" value="{{#if board}}{{board.author}}{{/if}}" required maxlength="50">
                    </div>
                    
                    <div class="mb-3">
                        <label for="content" class="form-label">내용 <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="content" name="content" rows="10" required maxlength="5000">{{#if board}}{{board.content}}{{/if}}</textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label for="files" class="form-label">첨부파일</label>
                        <input type="file" class="form-control" id="files" name="files" multiple accept=".jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.txt">
                        <div class="form-text">최대 5개 파일, 각 파일당 최대 5MB</div>
                    </div>

                    {{#if (and board board.attachments board.attachments.length)}}
                    <div class="mb-3">
                        <label class="form-label">기존 첨부파일</label>
                        <ul class="list-group">
                            {{#each board.attachments}}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>{{this.originalName}}</span>
                                <small class="text-muted">{{formatFileSize this.size}}</small>
                            </li>
                            {{/each}}
                        </ul>
                        <div class="form-text text-warning">새 파일을 업로드하면 기존 파일이 모두 교체됩니다.</div>
                    </div>
                    {{/if}}
                    
                    <div class="d-flex justify-content-between">
                        <a href="{{#if board}}/board/{{board._id}}{{else}}/{{/if}}" class="btn btn-secondary">취소</a>
                        <button type="submit" class="btn btn-primary">
                            {{#if isEdit}}수정{{else}}작성{{/if}}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('boardForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const method = this.dataset.method;
    const action = this.action;
    
    fetch(action, {
        method: method,
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('{{#if isEdit}}수정{{else}}작성{{/if}}이 완료되었습니다.');
            location.href = `/board/${data.data._id}`;
        } else {
            alert('오류: ' + (data.message || '알 수 없는 오류가 발생했습니다.'));
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('{{#if isEdit}}수정{{else}}작성{{/if}} 중 오류가 발생했습니다.');
    });
});
</script>